<Page x:Class="CarCostNotepad.View.Charts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarCostNotepad.View"
      xmlns:lvc1="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" Foreground="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Charts">

    <Grid>
        <lvc1:PieChart x:Name="Chart" Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" Visibility="{Binding ShowChart}"  LegendLocation="{Binding ChartLegendPosition}"  />
        <TextBlock Foreground="White" Text="{Binding Summary}"/>
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="2" x:FieldModifier="public" x:Name="Sums">
                <TextBlock FontSize="30" Text="{Binding SumString}"/>
                <TextBlock  FontSize="30" x:Name="SAll" Text="{Binding Sum}"/>
            </StackPanel>

    </Grid>
</Page>
