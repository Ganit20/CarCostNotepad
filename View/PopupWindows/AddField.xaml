<Window x:Class="CarCostNotepad.View.PopupWindows.AddField"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarCostNotepad.View.PopupWindows"
        mc:Ignorable="d" Background="DimGray" Foreground="White"
        Title="AddField" Height="100" Width="200">
    <Grid>
        <StackPanel>
            <TextBlock>Name</TextBlock>
            <TextBox x:Name="Name"> </TextBox>

            <Button Margin="2"  Click="Add">Add</Button>
            <Button Margin="1" Click="Cancel">Cancel</Button>

        </StackPanel>
        
            
        
    </Grid>
</Window>
